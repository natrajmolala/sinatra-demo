<div class="row">
  <div class="col-md-8">

    <% unless vets.nil? %>
        <div class="panel panel-default">

          <div class="panel-heading">Veterinarians</div>

          <table class="table">
            <thead>
            <tr>
              <th><strong>Name</strong></th>
              <th><strong>Speciality</strong></th>
            </tr>
            </thead>
            <tbody>
            <% vets.each do |id, vet| %>
                <tr>
                  <td class="table-cell"><%= vet.firstname %>&nbsp;<%= vet.lastname %></td>
                  <td class="table-cell"><%= vet.speciality %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
    <% end %>

  </div>
</div>